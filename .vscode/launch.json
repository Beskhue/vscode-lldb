{
	"version": "0.2.0",
	"debugServer": 4711,
	"configurations": [
		{
			"name": "extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"stopOnEntry": false,
			"sourceMaps": true
		},
		{
            "name": "adapter.js",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/adapter.js",
			"cwd": "${workspaceRoot}",
            "stopOnEntry": false
		},
        {
			"name": "tests",
			"preLaunchTask": "build:tests",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"runtimeArgs": [ "--nolazy", "--harmony" ],
			"args": [
				"-u", "tdd",
				"--timeout", "999999",
				"--colors",
				"./tests/out"
			],
			"sourceMaps": true,
			"outDir": "${workspaceRoot}/tests/out"
		},
		{
			"name": "debuggee",
			"preLaunchTask": "build:debuggee",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceRoot}/tests/out/debuggee",
			"env": { "FOO": "bar" },
			"args": ["threads"],
			"cwd": "${workspaceRoot}",
			"stopOnEntry": true
		}
	]
}